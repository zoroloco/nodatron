         {"name" : "motionLed"      , "type" : "led",   "pin" : 4},
         {"name" : "tcpLed"         , "type" : "led",   "pin" : 5},
         {"name" : "powerButton"    , "type" : "button","pin" : 6},
         {"name" : "pirSensorFront" , "type" : "pir",   "pin" : 7},
         {"name" : "pirSensorLeft"  , "type" : "pir",   "pin" : 8},
         {"name" : "baseServo"      , "type" : "servo", "pin" : 9},
         {"name" : "camServo"       , "type" : "servo", "pin" : 10},
         {"name" : "pirSensorRight" , "type" : "pir",   "pin" : 11}
     ]
   },

    {"filename"    : "tcpSvc.js",
     "title"       : "tcpSvc",
     "keepAlive"   : true,
     "port"        : 8170,
     "securityKey" : "nodey",
     "logger"      : {"enabled" : true, "dir" : ""}
    }

	]
