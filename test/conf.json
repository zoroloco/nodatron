{"log" : "false",
 "logDir" : "/var/log/nodatron",
 "services" : [
    {"filename"     : "robotSvc.js",
	   "title"        : "robotSvc",
	   "log"          : false,
     "logDir"       : "/var/log/nodatron/robotSvc",
	   "keepAlive"    : true,
	   "baud"         : 9600,
	   "device"       : "/dev/ttyACM0",
     "stdinEnabled" : true,
	   "disabled"     : false,
     "components"   : [
         {"name" : "powerLed"       , "type" : "led",   "pin" : 2},
         {"name" : "activityLed"    , "type" : "led",   "pin" : 3},
         {"name" : "motionLed"      , "type" : "led",   "pin" : 4},
         {"name" : "tcpLed"         , "type" : "led",   "pin" : 5},
         {"name" : "powerButton"    , "type" : "button","pin" : 6},
         {"name" : "pirSensorFront" , "type" : "pir",   "pin" : 7},
         {"name" : "pirSensorLeft" , "type" : "pir",   "pin" : 8},
         {"name" : "baseServo"      , "type" : "servo", "pin" : 9},
         {"name" : "camServo"       , "type" : "servo", "pin" : 10},
         {"name" : "pirSensorRight" , "type" : "pir",   "pin" : 11}         
     ]
   },

    {"filename"  : "tcpSvc.js",
     "title"     : "tcpSvc",
     "log"          : false,
     "logDir"       : "/var/log/nodatron/tcpSvc",
     "keepAlive" : true,
     "port"      : 8170,
     "securityKey" : "nodey"
    }

	]
}
